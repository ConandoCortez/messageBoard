<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Dojo Message Board</title>
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <h1>The Dojo Message Board</h1>
        <hr>
        <% if(typeof(errors) != 'undefined' ) { %>
            <% for (var i in errors) { %>
                <h5 style="color: red"><%= errors[i].message %></h5>
            <% } %>
        <% } %>
        <form action="/message/" method="post">
            <p>Name: </p>
            <input type="text" name="name" class="text_field">
            <p>Message: </p>
            <textarea name="message" class="comment_field"></textarea>
            <p><button type="submit">Post a Message</button></p>
        </form>
        <div class="messages">
            <% for (var i = 0; i < post.length; i++){ %>
                <h2>Name: <%= post[i].name %></h2>
                <h2>Message: <%= post[i].message %></h2>
                    <% for (var j = 0; j < post[i].comments.length; j++) { %>
                        <div class="comments">
                            <p>Name: <%= post[i].comments[j].name %></p>
                            <p>Comment: <%= post[i].comments[j].text %></p>
                        </div>
                    <% } %>
                    <div class="comments">
                        <form action="/comment/<%= post[i]._id %>" method="post">
                            <p><label for="name">Name: </label></p>
                            <input type="text" name="name" class="text_field">
                            <p><label for="text">Comment: </label></p>
                            <textarea name="text" class="comment_field"></textarea>
                            <p><button type="submit">Post a Comment</button></p>
                        </form>
                    </div>
            <% } %>
        </div>
    </body>
</html>
